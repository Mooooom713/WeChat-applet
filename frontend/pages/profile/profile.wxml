<visitorprofile 
  wx:if="{{!isLogin}}"
  bind:showLoginDialog="_showLoginDialog"
  bind:showRegisterDialog="_showRegisterDialog">
</visitorprofile>
<userprofile
  wx:if="{{isLogin}}"
  id="{{userInfo['user_id']}}"
  sex="{{userInfo.gender}}"
  age="{{userInfo.age}}"
  grade="{{userInfo.grade}}"
  college="{{userInfo.department}}"
  major="{{userInfo.major}}"
  name="{{userInfo.name}}">
</userprofile>
<!-- dialog -->
<logindialog 
  id='loginDialog' 
  bind:confirmEvent="_confirmLoginEvent">
</logindialog>

<registerdialog
  id='registerDialog' 
  bind:confirmEvent="_confirmRegisterEvent">
</registerdialog>