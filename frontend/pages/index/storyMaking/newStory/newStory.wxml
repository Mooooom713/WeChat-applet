<view >
     <textarea placeholder-class="place-holder"  
            placeholder="写下你的故事 "
            maxlength='200' 
            bindinput='limit' 
            value="{{text}}" 
            style="font-size: 28px;"
            class='body'
            />
      <!-- 显示字数 -->
      <view class="clear"><text style="color: #ccc; font-size: 14px; float: right; margin-right: 2%;">{{current}} / {{max}} （最多可写200字）</text></view>
</view>
<view class='btn' bindtap='btn'>确认发布</view>